<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>display CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        border-collapse: collapse;
    }
</style>

<body>


    <h2>A basic HTML table</h2>

    <table class="equal-table" style="width:100%">
        <tr>
            <!-- <th>id_user</th> -->
            <th>Name</th>
            <th>email</th>
            <th>phone</th>
            <th>birthday</th>
            <th>gender</th>
            <th>address</th>
            <th>password</th>
            <th>role</th>
            <th>createAt</th>
            <th>Action</th>
        </tr>
        <% for(let i=0; i<dataTable.length; i++) { %>
            <tr>
                <!-- <td>
                    <%= dataTable[i].id_user %>
                </td> -->
                <td>
                    <%= dataTable[i].name %>
                </td>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].phone %>
                </td>
                <td>
                    <%= dataTable[i].birthday %>
                </td>
                <td>
                    <%= dataTable[i].gender %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <%= dataTable[i].password %>
                </td>
                <td>
                    <%= dataTable[i].role %>
                </td>
                <td>
                    <%= dataTable[i].createdAt %>
                </td>

                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id_user %>" class="btn-edit"> Edit </a>
                    <a href="/delete-crud?id=<%= dataTable[i].id_user %>" class="btn-delete"> Delete </a>
                </td>

            </tr>
            <% } %>
    </table>
</body>

</html>